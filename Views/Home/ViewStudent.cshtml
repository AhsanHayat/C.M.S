    <script src="~/Scripts/jquery-1.7.1.js"></script>


    <script>
        $(document).ready(function () {
            
            $('#ser').click(function () {
                $('#searched').empty();
                var roll = $('#roll').val();
                
                $.getJSON("/Home/getStudent?u=" + $('#roll').val(), function (data) {

                    $('#searched').append(data.Name);
                    $('#searched').append('<br/>');
                    $('#searched').append(data.RollNumber);
                    $('#searched').append('<br/>');
                    $('#searched').append(data.Country);
                    $('#searched').append('<br/>');
                    $('#searched').append(data.MobileNumber);
                    $('#searched').append('<br/>');
                    $('#searched').append(data.Address);

                });

            });

        });
    </script>
</head>
 
<body>
<h3>Search Student</h3>
<form action="/Home/SearchStudent" method="post">
 @*@using (Html.BeginForm("RemoveStudent", "Home", FormMethod.Post))
 {*@
 
<table align="center" cellpadding = "10">
 
    

 
<tr>
